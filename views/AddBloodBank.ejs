    <div class="container mt-3">
        <h2 class="text-danger">Blood Bank Details</h2>
        <hr>
    </div>

    <form action="/AddBloodBank" method="post" class="container shadow rounded mt-2 mb-2 pt-lg-4 pb-lg-4">
        <div class="container shadow rounded">
            <fieldset>
                <legend>Blood Bank Address:</legend>
                <label class="ms-4" for="state"><strong>State:</strong></label>
                &nbsp; &nbsp; &nbsp;
                <select style="width: 250px;" class="mb-2 me-3 mt-1 rounded shadow border-primary p-1" name="state" id="state"
                    aria-label="Select State" required>
                        <option value="">--Select State--</option>
                        <% Object.keys(stateDistricts).forEach(function(state) { %>
                            <option value="<%= state %>"><%= state %></option>
                        <% }); %>
                </select>

                <label class="ms-3" for="district"><strong>District:</strong></label>
                <select style="width: 250px;" class="ms-4 me-4 mt-1 rounded shadow border-primary p-1" name="district" id="district"
                    aria-label="Select State" required>
                    <option value="">--Select District--</option>
                </select>

                <label for="city"><strong>City:</strong></label>
                <input style="width: 250px;" class="ms-4 border-1 rounded shadow border-primary p-1" type="text" placeholder="Mention City" name="city" id="city">
            </fieldset>
        </div>

        <div class="container shadow rounded mt-5 pt-2 mb-2">
            <fieldset>
                <legend>Blood Bank Details:</legend>
                <label class="mt-3 ms-2" for="BloodBank"><strong>
                        <h5>Blood Bank Name:</h5>
                    </strong></label>
                <input class="rounded ms-4 border-primary border-1 shadow w-25" type="text" name="BloodBank"
                    id="BloodBankName" placeholder="Mention Name" required>
                <label class="mt-3 ms-5 me-lg-4" for="Parenthospital"><strong>
                        <h5>Parent Hospital Name:</h5>
                    </strong></label>
                <input class="rounded ms-4 border-primary border-1 shadow w-25" type="text" name="Parent"
                    id="Parenthospital" placeholder="Mention Name" required>
                <br><br>
                <label class="mt-3 ms-2" for="Category"><strong>
                        <h5>Category:</h5>
                    </strong></label>
                <select class="ms-lg-4 w-25 shadow rounded-1 border-primary p-1" name="Category" id="Category">
                    <option value="select category">select category</option>
                    <option value="Govt">Govt.</option>
                    <option value="Red-Cross">Red Cross</option>
                    <option value="Charitable">Charitable/Vol</option>
                    <option value="Private">Private</option>
                </select>
                <label class="mt-3 ms-5" for="Contact Person"><strong>
                        <h5>Contact Person:</h5>
                    </strong></label>
                <input class="rounded ms-5 border-primary border-1 shadow w-25" type="text" name="person" id="Person"
                    placeholder="Mention Person Name" required>
                <br><br>
                <label class="mt-3 ms-2 me-lg-4 mb-3" for="Email"><strong>
                        <h5>Email:</h5>
                    </strong></label>
                <input class="rounded ms-4 border-primary border-1 shadow w-25" type="email" name="Email" id="Email"
                    placeholder="Mention Email" required>
                <label class="mt-3 ms-5 me-lg-4 mb-3" for="Contact Number"><strong>
                        <h5>Contact No.:</h5>
                    </strong></label>
                <input class="rounded ms-4 border-primary border-1 shadow w-25" type="number" name="phone" id="phone"
                    placeholder="Mention Number" required>
                <br>
                <label class="mt-3 ms-3 me-lg-4 mb-3" for="Website"><strong>
                        <h5>Website:</h5>
                    </strong></label>
                <input class="rounded ms-4 border-primary border-1 shadow w-25" type="text" name="Website" id="Website"
                    placeholder="Mention Website" required>
            </fieldset>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-danger mt-3 ps-3 pe-3 m-auto">ADD</button>
            <button type="reset" class="btn btn-danger mt-3 ps-3 pe-3 m-auto">CANCEL</button>
        </div>
    </form>

